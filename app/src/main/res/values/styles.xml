<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_blue_green</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/insync_white</item>
        <item name="colorControlActivated">@color/insync_white</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="eventListTextView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/subheader</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:fontFamily">Roboto-Regular</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/insync_white</item>
        <item name="android:textColorSecondary">@color/insync_white</item>
        <item name="actionMenuTextColor">@color/insync_white</item>

    </style>

    <!--Custom styles-->

    <style name="page_background">
        <item name="android:background">@drawable/theme_gradient</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
    </style>
    <style name="text_subheader">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#FF9100</item>
    </style>
    <style name="text_large">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#FF9100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/text_large_margin_top</item>
    </style>
    <style name="text_regular">
        <item name="android:textColor">#795548</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
    </style>

    <style name="white_background">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_top</item>
        <item name="android:padding">@dimen/white_background_padding</item>
    </style>

    <style name="button" parent="text_large">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">#795548</item>
    </style>

    <color name="actionbar_bg">#FF5722</color>

    <style name="action_bar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="background">@color/actionbar_bg</item>
    </style>

    <style name="EventCreation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/profilePic</item>
        <item name="android:layout_toLeftOf">@id/ivCamera</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="alert_dialog_button">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:buttonBarButtonStyle">@style/alert_dialog_button</item>
    </style>
    <style name="EventDateTimePickerStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent</item>
    </style>
    <style name="MaterialDarkTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="MaterialLightSubheadSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="MaterialLightBody1Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="MaterialDarkBody1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="SpacingText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
